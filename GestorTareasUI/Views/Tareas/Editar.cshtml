@model GestorTareasUI.Models.Vista.ActualizarTareaVistaModelo

<h2>Editar Tarea</h2>

<form asp-action="Editar">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Titulo" class="control-label"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descripcion" class="control-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaVencimiento" class="control-label"></label>
        <input asp-for="FechaVencimiento" type="date" class="form-control" />
        <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="Completada" class="form-check-input" />
        <label asp-for="Completada" class="form-check-label"></label>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>